{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ASP.NET Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-backend",
            "program": "${workspaceFolder}/WebApiRestful/bin/Debug/net10.0/WebApiRestful.dll",
            "args": [],
            "stopAtEntry": false,
            "cwd":"${workspaceFolder}/WebApiRestful",
            "env":{
                "ASPNETCORE_ENVIRONMENT":"Development"
            }
        },
        {
            "name": "Angular Frontend (Browser)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/ClientApp/src",
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/ClientApp",
        }
    ],
    "compounds": [
        {
            "name": "Full Stack",
            "configurations": ["ASP.NET Backend", "Angular Frontend (Browser)"],
            "preLaunchTask": "strat-angular"
        }
    ]
}